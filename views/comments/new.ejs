<%- include("../partials/header")%>
<div class="container">
    <div class="row">
        <div class="col-md-4 text-center" id="formE">
            <h2>Add your review</h2>
            <form action="/books/<%= book._id %>/comments" method="POST">
                <div class="mb-2">
                    <input type="text" class="form-control" name="comment[text]" placeholder="review">
                </div>
                <div class="mb-2">
                    <input type="text" class="form-control" name="comment[author]" placeholder="author">
                </div>
                <div class="mb-2">
                    <button class="btn btn-primary form-control">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


