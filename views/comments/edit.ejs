<%- include("../partials/header")%>
<div class="container">
    <div class="row">
        <div class="col-md-4 text-center" id="formE">
            <h2>Edit your review</h2>
            <form action="/books/<%= book_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
                <div class="mb-2">
                    <textarea name="comment[text]" class="form-control" cols="30" rows="8"><%= comment.text%></textarea>
                </div>
                <div class="mb-2">
                    <button class="btn btn-primary form-control">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


